<div id="SearchFloat">
    @using (Html.BeginForm("Challenge", "Home", FormMethod.Get))
    {
        <br />

        <input type="submit" name="mychallenge" value="Take A Challenge" style='width:420px' />

        <h4> OR</h4>
    }
    </div>
    <div id="SearchFloat1" style="vertical-align:central;">
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <form method="get">

            <input type="search" name="searchTerm" />
            <input id="Submit1" type="submit" value="Search by Name" style='width:130px' />
        </form>
    }

</div>



    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fructan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sorbitol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mannitol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fructose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GOS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lactose)
            </th>
         

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fructan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sorbitol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mannitol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fructose)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GOS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lactose)
                </td>
             
                <td>
                    <div class="display-field"><img src="@Url.Content(item.Image)" /></div>
                </td>

            </tr>
        }
        


    </table>





